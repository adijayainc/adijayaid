
{% block stylesheets %}
  {% do assets.addCss('theme://assets/css/reset.css', { priority: 102 })  %}
  {% do assets.addCss('theme://assets/css/base.css') %}
{% endblock stylesheets %}

{% block javascripts %}
  {# Compatibility block for some grav-injected js #}
{% endblock javascripts %}

{% block assets deferred %}
  {{ assets.css()|raw }}
  {{ assets.js()|raw }}
{% endblock %}

{# Inline Theme Styling #}
<style>
  {% set palette = theme_config.style.color.palette %}

  {% if palette == 'light' %}
  {% include 'partials/theme/light.html.twig' %}
  {% endif %}

  {% if palette == 'dark' %}
  {% include 'partials/theme/dark.html.twig' %}
  {% endif %}

  {% if palette == 'theme_default' %}
  {% include 'partials/theme/default.html.twig' %}
  {% endif %}
</style>

{% if debug_enabled %}
  {{ dump("=====") }}
  {{ dump("Active Theme Palette: ", palette) }}
{% endif %}

